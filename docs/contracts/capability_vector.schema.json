{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://vibeflow.dev/schemas/capability-vector-v1.json",
  "type": "object",
  "required": [
    "agent_id",
    "embedding",
    "policy_flags",
    "resource"
  ],
  "properties": {
    "agent_id": {
      "type": "string"
    },
    "embedding": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "minItems": 32
    },
    "policy_flags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "resource": {
      "type": "object",
      "required": [
        "max_ctx",
        "rps"
      ],
      "properties": {
        "max_ctx": {
          "type": "integer",
          "minimum": 0
        },
        "rps": {
          "type": "number",
          "minimum": 0
        },
        "memory_mb": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "score_modifiers": {
      "type": "object",
      "properties": {
        "recent_failures": {
          "type": "number",
          "minimum": 0
        },
        "cooldown": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "metadata": {
      "type": "object"
    }
  }
}
