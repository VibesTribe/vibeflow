{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://vibeflow.dev/schemas/analyst.review.schema.json",
  "title": "AnalystReview",
  "type": "object",
  "required": ["idea_id", "research_sha", "verdict", "rationale", "approved_features"],
  "properties": {
    "idea_id": { "type": "string" },
    "research_sha": { "type": "string", "description": "SHA256 of research brief to avoid drift" },
    "verdict": { "type": "string", "enum": ["approve", "revise"] },
    "rationale": { "type": "string" },
    "approved_features": {
      "type": "object",
      "required": ["core", "gap"],
      "properties": {
        "core": { "type": "array", "items": { "type": "string" } },
        "gap": { "type": "array", "items": { "type": "string" } }
      }
    },
    "risks": { "type": "array", "items": { "type": "string" } },
    "notes": { "type": "array", "items": { "type": "string" } },
    "reviewed_at": { "type": "string", "format": "date-time" }
  },
  "additionalProperties": false
}
