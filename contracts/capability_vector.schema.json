{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Capability Vector",
  "type": "object",
  "required": ["skills", "updated_at"],
  "properties": {
    "skills": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "score"],
        "properties": {
          "id": { "type": "string" },
          "score": { "type": "number", "minimum": 0, "maximum": 1 },
          "signals": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "updated_at": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}(?:\\.[0-9]+)?(?:Z|[+-][0-9]{2}:[0-9]{2})$"
    }
  }
}
