{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Task Packet",
  "type": "object",
  "required": [
    "task_id",
    "title",
    "objectives",
    "deliverables",
    "confidence"
  ],
  "properties": {
    "task_id": {
      "type": "string",
      "pattern": "^task/[a-zA-Z0-9._-]+$"
    },
    "title": {
      "type": "string"
    },
    "objectives": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "deliverables": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0.95,
      "maximum": 1
    },
    "edit_scope": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
