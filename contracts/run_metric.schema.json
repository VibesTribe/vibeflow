{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://vibeflow.dev/schemas/run-metric-v1.json",
  "type": "object",
  "required": [
    "task_id",
    "platform",
    "model",
    "cost_usd",
    "latency_ms",
    "success"
  ],
  "properties": {
    "task_id": {
      "type": "string"
    },
    "platform": {
      "type": "string"
    },
    "model": {
      "type": "string"
    },
    "cost_usd": {
      "type": "number"
    },
    "latency_ms": {
      "type": "integer"
    },
    "success": {
      "type": "boolean"
    }
  }
}
