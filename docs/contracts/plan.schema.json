{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Vibeflow Plan",
  "type": "object",
  "required": [
    "id",
    "version",
    "tasks"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^plan/[a-zA-Z0-9_-]+$"
    },
    "version": {
      "type": "string"
    },
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "confidence",
          "status",
          "deliverables"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^task/[a-zA-Z0-9._-]+$"
          },
          "title": {
            "type": "string",
            "minLength": 3
          },
          "confidence": {
            "type": "number",
            "minimum": 0.95,
            "maximum": 1
          },
          "status": {
            "type": "string",
            "enum": [
              "assigned",
              "in_progress",
              "received",
              "supervisor_review",
              "testing",
              "supervisor_approval",
              "ready_to_merge",
              "complete",
              "blocked"
            ]
          },
          "deliverables": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "depends_on": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": []
          }
        }
      }
    }
  }
}