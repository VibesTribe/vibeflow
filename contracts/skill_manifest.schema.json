{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Skill Manifest",
  "type": "object",
  "required": [
    "id",
    "name",
    "category",
    "runner",
    "ok_probe"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "category": {
      "type": "string",
      "enum": [
        "core",
        "execution",
        "maintenance"
      ]
    },
    "runner": {
      "type": "string"
    },
    "inputs": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "outputs": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "ok_probe": {
      "type": "object",
      "required": [
        "command"
      ],
      "properties": {
        "command": {
          "type": "string"
        },
        "timeout_seconds": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "locked": {
      "type": "boolean",
      "default": false
    }
  }
}
