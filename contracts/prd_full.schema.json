{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Product Requirements Document",
  "type": "object",
  "required": [
    "id",
    "executive_summary",
    "requirements",
    "acceptance_criteria"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "executive_summary": {
      "type": "string"
    },
    "requirements": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "acceptance_criteria": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "metrics": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}