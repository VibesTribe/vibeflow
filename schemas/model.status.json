{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Model Status Record",
  "type": "object",
  "properties": {
    "platform": { "type": "string" },
    "status": { "type": "string", "enum": ["healthy", "near_limit", "cooldown"] },
    "severity": { "type": "string", "enum": ["info", "warn", "error"] },
    "last_message": { "type": "string" },
    "color": { "type": "string" },
    "last_updated": { "type": "string", "format": "date-time" },
    "cooldown_until": { "type": ["string", "null"], "format": "date-time" },
    "history": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "status": { "type": "string" },
          "severity": { "type": "string" },
          "message": { "type": "string" },
          "at": { "type": "string", "format": "date-time" }
        },
        "required": ["status", "severity", "message", "at"]
      }
    }
  },
  "required": ["platform", "status", "severity", "last_updated"]
}
