{
    "compilerOptions":  {
                            "target":  "ES2021",
                            "module":  "ESNext",
                            "moduleResolution":  "Node",
                            "esModuleInterop":  true,
                            "resolveJsonModule":  true,
                            "strict":  true,
                            "skipLibCheck":  true,
                            "forceConsistentCasingInFileNames":  true,
                            "outDir":  "dist",
                            "baseUrl":  ".",
                            "paths":  {
                                          "@core/*":  [
                                                          "src/core/*"
                                                      ],
                                          "@agents/*":  [
                                                            "src/agents/*"
                                                        ],
                                          "@adapters/*":  [
                                                              "src/adapters/*"
                                                          ],
                                          "@mcp/*":  [
                                                         "src/mcp/*"
                                                     ]
                                      },
                            "jsx":  "react-jsx"
                        },
    "include":  [
                    "src",
                    "apps",
                    "scripts/**/*.mjs",
                    "skills/**/*.mjs"
                ],
    "exclude":  [
                    "dist",
                    "node_modules"
                ]
}
