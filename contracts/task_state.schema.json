{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Task State Snapshot",
  "type": "object",
  "required": [
    "tasks",
    "agents",
    "failures",
    "metrics",
    "updated_at"
  ],
  "properties": {
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "status",
          "confidence",
          "updated_at"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          },
          "owner": {
            "type": "string"
          },
          "lessons": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "title",
                "summary"
              ],
              "properties": {
                "title": {
                  "type": "string"
                },
                "summary": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "agents": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "status",
          "summary",
          "updated_at"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    },
    "failures": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "summary",
          "reason_code"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          },
          "reason_code": {
            "type": "string"
          }
        }
      }
    },
    "merge_candidates": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "branch",
          "title",
          "summary"
        ],
        "properties": {
          "branch": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          },
          "checklist": {
            "type": "array",
            "items": {
              "type": "boolean"
            },
            "default": []
          }
        }
      }
    },
    "metrics": {
      "type": "object",
      "additionalProperties": {
        "type": "number"
      }
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
